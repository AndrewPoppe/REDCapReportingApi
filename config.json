{
  "name": "REDCap Reporting API",
  "namespace": "YaleREDCap\\REDCapReportingAPI",
  "description": "TBD",
  "authors": [
    {
      "name": "Andrew Poppe",
      "email": "andrew.poppe@yale.edu",
      "institution": "Yale University"
    }
  ],
  "framework-version": 16,
  "links": {
    "control-center": [
      {
        "name": "REDCap Reporting API",
        "key": "redcap-reporting-api",
        "icon": "fas fa-cloud",
        "url": "api-config.php",
        "show-header-and-footer": true
      }
    ],
    "project": []
  },
  "system-settings": [
    {
      "key": "api_enabled",
      "name": "<strong>Enable REDCap Reporting API</strong>",
      "type": "checkbox",
      "super-users-only": true
    },
    {
      "key": "user",
      "name": "Select the user to give access to",
      "required": true,
      "type": "dropdown",
      "choices": [],
      "autocomplete": true,
      "repeatable": true,
      "super-users-only": true
    },
    {
      "key": "database_query_tool_queries_enabled",
      "name": "<strong>Enable fetching Database Query Tool queries</strong>",
      "type": "checkbox",
      "super-users-only": true
    },
    {
      "key": "database_query_tool_queries",
      "name": "<strong>Available Database Query Tool queries</strong>:<br>Select the Database Query Tool queries that should be available to fetch via this API. If none are selected, ALL queries will be available to fetch via this API",
      "required": false,
      "type": "dropdown",
      "repeatable": true,
      "choices": [],
      "autocomplete": true,
      "super-users-only": true
    }
  ],
  "no-auth-pages": [
    "api"
  ],
  "no-csrf-pages": [
    "api"
  ],
  "auth-ajax-actions": [
    "generate-token",
    "delete-token"
  ],
  "compatibility": {
    "php-version-min": "8.0.0",
    "redcap-version-min": "14.6.4"
  }
}